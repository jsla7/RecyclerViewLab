<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idTrab"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/nombreTrab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreTrab"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Fulano de tal"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tipoTrab"
        app:layout_constraintStart_toEndOf="@+id/idTrab"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipoTrab"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TC"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/sueldo"
        app:layout_constraintStart_toEndOf="@+id/nombreTrab"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sueldo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="570.54"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tipoTrab"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
